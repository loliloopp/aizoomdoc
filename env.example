# ============================================
# Google API Configuration (Direct Gemini)
# ============================================
# Получите ключ на https://aistudio.google.com/
GOOGLE_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# OpenRouter API Configuration
# ============================================
# Получите ключ на https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ============================================
# LLM Model Configuration
# ============================================
# Рекомендуемые модели:
# - google/gemini-2.0-flash-thinking-exp (по умолчанию, быстрая)
# - anthropic/claude-3.5-sonnet (более качественная, но дороже)
# - openai/gpt-4o (альтернатива)
DEFAULT_MODEL=google/gemini-3-flash-preview

# ============================================
# Image Processing Settings
# ============================================
# Размер viewport-окна в пикселях (квадрат или прямоугольник)
VIEWPORT_SIZE=2048

# Паддинг вокруг целевых блоков (в пикселях)
VIEWPORT_PADDING=512

# Цвет подсветки целевых блоков (RGB)
HIGHLIGHT_COLOR_RGB=255,0,0

# Толщина рамки подсветки (в пикселях)
HIGHLIGHT_THICKNESS=10

# ============================================
# File Paths
# ============================================
# Для работы с одной стадией:
DATA_ROOT=./data

# Для сравнения двух стадий:
STAGE_P_ROOT=./data/stage_p
STAGE_R_ROOT=./data/stage_r

# ============================================
# Logging Configuration
# ============================================
# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================
# Supabase Configuration
# ============================================
# PostgreSQL БД для хранения чатов, сообщений и метаданных
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
DATABASE_URL=postgresql://postgres:your_password@db.your-project-id.supabase.co:5432/postgres

# ============================================
# S3 Cloud.ru Configuration
# ============================================
# Хранилище для изображений, документов и viewport-кропов
S3_ENDPOINT=https://s3.cloud.ru
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=cloud-aizoomdoc
S3_REGION=ru-1

# Dev URL для бакета с файлами дерева проектов
S3_PROJECTS_DEV_URL=https://your-dev-projects-url.com

# ============================================
# Database and Storage Settings
# ============================================
# Включить сохранение чатов в БД
USE_DATABASE=true

# Включить хранение файлов в S3
USE_S3_STORAGE=true

# Максимальный размер файла для загрузки в S3 (в МБ)
MAX_FILE_SIZE_MB=100

# TTL для подписанных S3 URLs (в секундах)
S3_URL_EXPIRATION=3600

# Уровень логирования для БД операций
DATABASE_LOG_LEVEL=ERROR

